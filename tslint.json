{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-eslint-rules", "tslint-config-prettier"],
  "rules": {
    "quotemark": [true, "single", "jsx-single"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "interface-name": [true, "never-prefix"],
    "trailing-comma": [false, { "multiline": "always", "singleline": "always" }],
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "object-curly-spacing": [true, "never"],
    "no-var-requires": false,
    "class-name": true,
    "comment-format": [true, "check-space", "check-uppercase", { "ignore-words": ["TODO"] }],
    "curly": true,
    "eofline": true,
    "forin": false,
    "indent": [true, "spaces"],
    "label-position": true,
    "max-line-length": [true, 120],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-internal-module": true,
    "no-empty": true,
    "no-eval": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-namespace": false,
    "no-trailing-whitespace": true,
    "no-unused-expression": [true, "allow-new"],
    "no-use-before-declare": true,
    "only-arrow-functions": false,
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "radix": true,
    "semicolon": [true],
    "triple-equals": [true, "allow-null-check"],
    "variable-name": false,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"]
  },
  "rulesDirectory": []
}
